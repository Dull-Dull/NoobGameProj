<?xml version="1.0" encoding="utf-8"?>

<reflection>

	<Include>../Datas/Math</Include>

	<Enum name ="PLAYER_STATE">
		<Val name ="STOP"/>
		<Val name ="RUN"/>
		<Val name ="DEAD"/>
	</Enum>

	<Data name ="PlayerTransform">
		<Val type ="Vector2D" name ="position"/>
		<Val type ="Vector2D" name ="velocity"/>
	</Data>

	<Data name ="PlayerDirection">
		<Val type ="Vector2D" name ="direction"/>
		<Val type ="float" name="angularVelocity"/>
	</Data>

	<Data name ="PlayerAnimation">
		<Val type ="PLAYER_STATE" name ="state"/>
	</Data>

</reflection>